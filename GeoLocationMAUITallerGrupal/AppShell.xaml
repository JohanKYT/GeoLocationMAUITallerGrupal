<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GeoLocationMAUITallerGrupal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GeoLocationMAUITallerGrupal.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GeoLocationMAUITallerGrupal">

    <TabBar>
        <ShellContent
        Title="Weather View"
        ContentTemplate="{DataTemplate local:WeatherView}"
        Route="WeatherView" />
        
        <ShellContent
            Title="Notas"
            ContentTemplate="{DataTemplate local:AllNotesPage}"
            Route="AllNotesPage" />

    </TabBar>
</Shell>
